<div class="container">
<h1>Edit Class</h1>
<%= form_for @workout do |f| %>
   <div class="field">
     <%= f.label :name %>
     <%= f.text_field :name %>
   </div>
   <div class="field">
     <%= f.label :instructor_id %>
     <%= f.collection_select(:instructor_id, Instructor.all, :id, :name, prompt: true) %>
   </div>
   <div class="field">
     <%= f.label :description %>
     <%= f.text_area :description, size: "30x8" %>
   </div>
   <div class="field">
     <%= f.label :time %>
     <%= f.datetime_local_field :time %>
   </div>
   <div class="actions"><%= f.submit %></div>
<% end %>
<br><br>
<div class="row">
  <a href="/classes">Return to Classes</a>
</div>
</div>
